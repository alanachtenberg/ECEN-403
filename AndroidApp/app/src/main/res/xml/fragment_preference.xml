<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Server">
        <EditTextPreference android:id="@+id/host_address"
            android:key="host_address"
            android:title="Host Address"
            android:defaultValue="localhost"
            android:inputType="textShortMessage"
            />
        <EditTextPreference android:id="@+id/port_num"
            android:key="port_num"
            android:title="Port Number"
            android:inputType="number"
            android:defaultValue="1234"
            />
        <EditTextPreference android:id="@+id/server_pass"
            android:key="server_pass"
            android:title="Server Password"
            android:inputType="textPassword"
            />

    </PreferenceCategory>
</PreferenceScreen>